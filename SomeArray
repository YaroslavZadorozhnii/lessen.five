/* Дан массив {0,5,2,4,7,1,3,19} — написать программу
для подсчета нечетных цифр в нем.  */

public class SomeArray {

	public static void main(String[] args) {
		int[] a = new int[] {0,5,2,4,7,1,3,19};
		int x = 0;
		int y = 0;
		for(int i = 0 ; i < a.length ; i++) {
			if(a[i] % 2 != 0) {
				x = x + a[i];
				y++;
			}
		}
		System.out.println("В массиве " + y + " нечетных чисел. Их сумма равна " + x);

	}

}
